.CheckBox {
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  background: #fff;
}

.checkBox_container {
  display: flex;
  flex-direction: row;
  padding: 0.2em 0.6em;
  align-items: center;
  justify-content: center;
  width: 90%;
}

.checkBox_container > .checkBoxName {
  width: 30%;
}

.checkBox_container radio-group {
  height: 2.2em;
  width: 70%;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
}

.CheckBox radio {
  margin-right: 1em;
}

.signIn {
  background: #f85e13;
  color: #fff;
  position: fixed;
  bottom: 0;
  width: 100%;
}

.login_out {
  background: #fff;
  border: 1px solid #8b572a;
  color: #fff;
}

.footer_botton {
  width: 100%;
  position: absolute;
  bottom: 0;
  background: #fff;
  border: 1px solid rgb(220, 220, 220);
  color: #8b572a;
  font-size: 0.8em;
}

.mapimg {
  width: 30px;
  height: 30px;
}

.wel {
