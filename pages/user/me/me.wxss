/* pages/login_signUp/index.wxss */
.orange {
  color: #f85e13;
}

.sign {
  position: absolute;
  padding: 0 5px 0 0;
  height: 30px;
  line-height: 30px;
}

.label-text {
  margin: 0 0 0 10px;
  font-size: 14px;
}
.container {
  position: absolute;
  width: 100%;
  height: 100%;
  background: #fff;
  color: #222;
}

.info_image_container {
  margin-bottom: 1em;
  background: #fff;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 2em 0;
}

.info_image_container image {
  width: 5em;
  height: 5em;
  min-height: 5em;
  max-height: 5em;
  border-radius: 50%;
  border: 1rpx solid #eee;
}

.inputGroup {
  margin: 1.5%;
  display: flex;
  flex-direction: column;
  align-items: center;
  background: #fff;
  /* box-shadow: 0 0 10px #666; */
   /* border: 1px solid #e1e1e1; */
   border-radius: 10px;
}

.input_item_container {
  width: 100%;
  min-height: 2.6em;
  /* border-bottom: 1rpx solid #f8f6f3; */
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  
}

.input_item_container_title {
  width: 30%;
  color: #000;
  padding: 0 35rpx;
}

.input_item_container > input {
  width: 70%;
  height: 100%;
  margin:10rpx;
  padding: 10rpx 20rpx;
  border-bottom: 1px solid #f7d9c5;
}
.input_item_phone {
  width: 70%;
  height: 100%;
  margin:10rpx;
  padding: 10rpx 20rpx;
  border-bottom: 1px solid #FFFFFF !important;
}
.input_item_container > textarea {
  display: flex;
  /* align-items: center; */
  height: 58px;
  line-height: 1.2em;
  width: 70%;
  padding: 10px 10rpx 10px 10rpx;
  margin:10rpx 10rpx 10rpx 5rpx;
  /* border: 1rpx solid #F1F1F1; */
  border-bottom: 1px solid #f3f5f4;
  color: #D25608;
}

