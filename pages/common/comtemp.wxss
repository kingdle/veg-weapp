/*ub-list*/

.listNews .list-flex {
  display: flex;
  justify-content: space-between;
  width: 100%;
  flex-wrap: wrap;
}

.listNews .listBox {
  margin: 2rpx 0 5rpx 0;
  background: #fff;
  min-height: 80px;
  width: 100%;
}

.listAvatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  border: #f5fcf6 solid 2px;
  box-shadow: 3px 3px 10px rgba(0, 0, 0, 0.1);
  float: left;
  margin-right: 10px;
}

.listNickname {
  padding-left: 10rpx;
}

.listNews .listBox .boxPic {
  padding: 40rpx 24rpx 20rpx;
}

.listbottom {
  position: relative;
  color: #b3b3b3;
  line-height: 30rpx;
}

.listbottom image {
  height: 30rpx;
  width: 30rpx;
  float: left;
  padding-right: 10rpx;
}

.listAddress {
  position: relative;
  padding-top: 50rpx;
  color: #b3b3b3;
}

.listAddress text {
  padding-right: 10rpx;
}

.listNews .listBox .listIntro {
  display: block;
  padding-top: 60rpx;
}

.listImg {
  display: inline-block;
  flex-wrap: nowrap;
  justify-content: space-around;
}

.listImgText {
  height: 160rpx;
  width: 160rpx;
  margin:0 11rpx 0 0;
border-radius:2px;
border:1px #f3f3f3 solid;

}

.listTags {
  display: inline-block;
  justify-content: space-between;
}

.listTagText {
  margin-right: 6rpx;
  color: #676767;
  font-size: 0.6rem;
  font-weight: 300;
  padding: 6rpx 12rpx;
  background: #f4f4f4;
  border: #e5e5e4 solid 0px;
  border-radius: 20px;
}

.cdate {
  font-size: 27rpx;
  padding-right: 10rpx;
  color: #b3b3b3;
}

