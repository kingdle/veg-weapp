.weui-cell {
  padding: 0px 20rpx;
  position: relative;
  display: flex;
  align-items: center;
}

.weui-cells {
  background-color: #fff;
}

.weui-cells:before {
  content: " ";
  position: absolute;
  left: 0;
  top: 0;
  right: 0;
  height: 1px;
  color: #d9d9d9;
}

.weui-cells:after {
  content: " ";
  position: absolute;
  left: 0;
  bottom: 0;
  right: 0;
  height: 1px;
  color: #d9d9d9;
}

