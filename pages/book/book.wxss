.page_body {
  margin-top: 95rpx;
}

.weui-panel__bd {
  background-color: #fff;
}

.weui-media-box {
  padding: 30rpx;
  position: relative;
}

.weui-media-box:first-child:before {
  display: none;
}

.weui-media-box__title {
  font-weight: 400;
  font-size: 32rpx;
  width: auto;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  word-wrap: normal;
  word-break: break-all;
}

.weui-media-box__desc {
  color: #999;
  font-size: 26rpx;
  line-height: 1.2;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}

.weui-media-box__info {
  margin-top: 30rpx;
  padding-bottom: 10rpx;
  font-size: 26rpx;
  color: #cecece;
  line-height: 1em;
  list-style: none;
  overflow: hidden;
}

.weui-media-box__info__meta {
  float: left;
  padding-right: 1em;
}

.weui-media-box__info__meta_extra {
  padding-left: 1em;
  border-left: 1px solid #cecece;
}

.weui-media-box__title_in-text {
  margin-bottom: 16rpx;
}

.weui-media-box_appmsg {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
  border-bottom: 10rpx solid #f8f8f8;
}

.weui-media-box__thumb {
  width: 100%;
  height: 100%;
  vertical-align: top;
  border-radius: 50%;
  border-bottom: 2px solid #fff;
  box-shadow: 6rpx 6rpx 20rpx rgba(0, 0, 0, 0.1);
}

.weui-media-box__hd_in-appmsg {
  margin-right: 0.8em;
  width: 120rpx;
  height: 120rpx;
  line-height: 120rpx;
  text-align: center;
}

.weui-media-box__hd_in-appmsg {
  margin-right: 0.8em;
  width: 120rpx;
  height: 120rpx;
  line-height: 120rpx;
  text-align: center;
}

.weui-media-box__bd_in-appmsg {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  flex: 1;
  min-width: 0;
}

.weui-media-box_small-appmsg {
  padding: 0;
}

.weui-badge {
  display: inline-block;
  padding: 0.15em 0.4em;
  min-width: 16rpx;
  border-radius: 36rpx;
  background-color: #f06307;
  color: #fff;
  line-height: 1.2;
  text-align: center;
  font-size: 12px;
  vertical-align: middle;
}

.note {
  height: 4em;
}

.note-seller {
  text-align: left;
  margin-left: 6rpx;
  padding: 16rpx 0;
  font-size: 24rpx;
  line-height: 1.2em;
}

.fui-cell-icon {
  margin-right: 6rpx;
  width: 38rpx;
  height: 38rpx;
  color: #999;
}

.footer {
  padding-top: 20rpx;
  height: 166rpx;
  line-height: 188rpx;
  text-align: center;
}

.no-orders {
  padding: 40rpx;
  text-align: center;
  color: #999;
  font-size: 12px;
  background-color: #fff;
}

.footer-text {
  font-size: 28rpx;
  color: #999;
}

.label {
  display: flex;
  justify-content: center;
  align-items: center;
}

.searchbar-result {
  margin-top: 0;
  font-size: 28rpx;
}

.searchbar-result:before {
  display: none;
}

.weui-cell {
  padding: 24rpx 30rpx 24rpx 70rpx;
}

.search-bar {
  position: fixed;
  top: 0;
  z-index: 999;
  width: 100%;
}

.weui-search-bar {
  position: relative;
  padding: 16rpx 20rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  box-sizing: border-box;
  background-color: #faf9fe;
  /* border-top: 1rpx solid #d7d6dc;
  border-bottom: 1rpx solid #d7d6dc; */
}

.weui-search-bar__form {
  position: relative;
  -webkit-box-flex: 1;
  -webkit-flex: auto;
  flex: auto;
  border-radius: 10rpx;
  background: #fff;
  border: 1rpx solid #e6e6ea;
}

.weui-search-bar__box {
  position: relative;
  padding-left: 60rpx;
  padding-right: 60rpx;
  width: 100%;
  box-sizing: border-box;
  z-index: 1;
}

.weui-icon-search_in-box {
  position: absolute;
  left: 20rpx;
  top: 14rpx;
}

icon {
  vertical-align: middle;
}

.weui-icon-clear {
  position: absolute;
  top: 0;
  right: 0;
  padding: 14rpx 16rpx;
  font-size: 0;
}

.weui-search-bar__input {
  height: 56rpx;
  line-height: 56rpx;
  font-size: 28rpx;
}

.weui-search-bar__label {
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  z-index: 2;
  border-radius: 6rpx;
  text-align: center;
  justify-content:center;
  color: #9b9b9b;
  background: #fff;
  line-height: 56rpx;
}

.weui-icon-search {
  margin-right: 16rpx;
  margin-top: 5rpx;
  font-size: inherit;
}

.weui-search-bar__text {
  display: inline-block;
  margin-top: -3rpx;
  font-size: 28rpx;
  vertical-align: middle;
}

.weui-search-bar__cancel-btn {
  margin-left: 20rpx;
  line-height: 56rpx;
  color: #09bb07;
  white-space: nowrap;
}
