  display: inline-flex;
  height: 10rpx;
  margin-left: 2rpx;
  justify-content: space-between;
}

.banner .wx-swiper-dot::before {
  content: '';
  flex-grow: 1;
  background: rgba(255, 255, 255, 0.8);
  border-radius: 8rpx;
}

.banner .wx-swiper-dot-active::before {
  background: rgba(255, 88, 11, 0.8);
}

