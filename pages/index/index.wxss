@import "../common/comtemp.wxss";

page {
  height: 100%;
}

.container {
  /* height: 100%; */
  min-height: 0 !important;
}

scroll-view {
  height: 100%;
}

.header {
  position: fixed;
  display: -webkit-flex;
  left: 0;
  top: 0;
  width: 100%;
  padding: 15rpx;
  box-sizing: border-box;
  z-index: 1;
  -webkit-transition: background 0.5s ease-in-out;
}

.header .icon {
  width: 40rpx;
  height: 40rpx;
  vertical-align: top;
  margin-left: -15rpx;
}

.header .location {
  color: #fff;
  font-size: 28rpx;
  line-height: 40rpx;
  min-width: 100rpx;
  max-width: 340rpx;
  padding: 8rpx 10rpx 5rpx 10rpx;
  border-radius: 20rpx;
  margin-right: 20rpx;
  vertical-align: center;
}

.header .search {
  width: 58%;
  color: #888;
  font-size: 25rpx;
  line-height: 40rpx;
  padding: 10rpx;
  padding-left: 30rpx;
  border-radius: 30rpx;
  background: #fff;
  /*border-bottom: 1rpx solid #aaa;*/
}

.scancode {
  position: absolute;
  right: 5%;
  top: 6px;
  width: 66rpx;
  height: 66rpx;
  background: #fff;
  border-radius: 50%;
  z-index: 11;
}

.code {
  width: 50rpx;
  height: 50rpx;
  padding: 8rpx 0 0 8rpx;
}

.header.scrolled {
  background: #dd2a2a;
  opacity: 0.8;
}

.banner {
  height: 112rpx;
}

.banner image {
  width: 100%;
  height: 100%;
}

.section-big {
  padding: 20rpx;
}

.section-big .title {
  position: relative;
  text-align: center;
  font-size: 32rpx;
  font-weight: bold;
  line-height: 2;
  margin-bottom: 20rpx;
}

.section-big .title:before {
  content: " ";
  position: absolute;
  left: 50%;
  top: 50%;
  margin-left: -180rpx;
  width: 100rpx;
  height: 1rpx;
  background: #000;
}

.section-big .title:after {
  content: " ";
  position: absolute;
  left: 50%;
  top: 50%;
  margin-left: 80rpx;
  width: 100rpx;
  height: 1rpx;
  background: #000;
}

.nearby {
  padding-left: 0;
  padding-right: 0;
}

.nearby .filters {
  display: -webkit-flex;
  height: 50%;
}

.nearby .filters .filter.left {
  -webkit-flex: 1;
  text-align: left;
  color: #696969;
  font-size: 28rpx;
  font-family: Arial, Helvetica, sans-serif;
  padding-left: 45rpx;
}

.nearby .filters .filter.right {
  -webkit-flex: 1;
  text-align: right;
  color: #696969;
  font-size: 26rpx;
  padding-right: 60rpx;
}

.nearby .filters .filter .v {
  display: none;
}

.nearby .filters .filter.active {
  color: #000;
  font-weight: bold;
}

.nearby .filters .filter.active .v {
  display: inline-block;
}

.loading {
  font-size: 32rpx;
  text-align: center;
  line-height: 2;
  margin-bottom: 20rpx;
}

.shop {
  width: 100%;
