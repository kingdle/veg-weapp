  list-style: none;
  overflow: hidden;
  margin-top: -12rpx;
}

.shop.list {
  padding-top: 30rpx;
  margin-bottom: 25rpx;
  background: #fff;
}

.title {
  width: auto;
  float: left;
}

.index-body {
  background-color: #fff;
